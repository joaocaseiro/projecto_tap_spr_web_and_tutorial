<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<!-- //////////////////////////////////////////////////////////////// District /////////////////////////////////////////////////////////////////////// -->
	<changeSet id="1" author="jcaseiro">
		<comment>Table holding disctrict information</comment>

		<createTable tableName="District">

			<column name="id" type="java.sql.Types.BIGINT">
				<constraints primaryKey="true" />
			</column>
			
			<column name="entityVersion" type="java.sql.Types.BIGINT" />
			
			<column name="districtCode" type="java.sql.Types.BIGINT"/>

			<column name="districtName" type="java.sql.Types.VARCHAR(60)" />
		</createTable>
	</changeSet>
	
	<!-- //////////////////////////////////////////////////////////////// County /////////////////////////////////////////////////////////////////////// -->
	
	<changeSet id="2" author="jcaseiro">
		<comment>Table holding county information</comment>

		<createTable tableName="County">

			<column name="id" type="java.sql.Types.BIGINT">
				<constraints primaryKey="true" />
			</column>
			
			<column name="entityVersion" type="java.sql.Types.BIGINT" />
			
			<column name="district_id" type="java.sql.Types.BIGINT"/>
			
			<column name="countyCode" type="java.sql.Types.BIGINT"/>

			<column name="countyName" type="java.sql.Types.VARCHAR(60)" />
		</createTable>
	</changeSet>
	
	<changeSet id="3" author="jcaseiro">
		<comment>Foreign key for county table</comment>
			<addForeignKeyConstraint baseColumnNames="district_id" baseTableName="County" constraintName="FK_County_District" referencedColumnNames="id"
		    	referencedTableName="District" referencesUniqueColumn="false" onDelete="CASCADE"/>
	</changeSet>

	<changeSet id="4" author="jcaseiro">
		<comment>create unique constraint on table County</comment>
	
		<addUniqueConstraint tableName="County" columnNames="district_id, countyCode"/>
	</changeSet>
	
	<!-- //////////////////////////////////////////////////////////////// Parish /////////////////////////////////////////////////////////////////////// -->
	
	<changeSet id="5" author="jcaseiro">
		<comment>Table holding parish information</comment>

		<createTable tableName="Parish">

			<column name="id" type="java.sql.Types.BIGINT">
				<constraints primaryKey="true" />
			</column>
			
			<column name="entityVersion" type="java.sql.Types.BIGINT" />
			
			<column name="county_id" type="java.sql.Types.BIGINT"/>
			
			<column name="parishCode" type="java.sql.Types.BIGINT"/>

			<column name="parishName" type="java.sql.Types.VARCHAR(60)" />
		</createTable>
	</changeSet>
	
	<changeSet id="6" author="jcaseiro">
		<comment>Foreign key for parish table</comment>
		<addForeignKeyConstraint baseColumnNames="county_id" baseTableName="Parish" constraintName="FK_Parish_County" referencedColumnNames="id"
		    referencedTableName="County" referencesUniqueColumn="false"/>
	</changeSet>

	<changeSet id="7" author="jcaseiro">
		<comment>create unique constraint on table Parish</comment>
	
		<addUniqueConstraint tableName="Parish" columnNames="county_id, parishCode"/>
	</changeSet>
	
	<!-- /////////////////////////////////////////////////////////////// Address /////////////////////////////////////////////////////////////////////// -->
	
	<changeSet id="8" author="jcaseiro">
		<comment>Table holding address information</comment>

		<createTable tableName="Address">

			<column name="id" type="java.sql.Types.BIGINT">
				<constraints primaryKey="true" />
			</column>
			
			<column name="entityVersion" type="java.sql.Types.BIGINT" />
			
			<column name="parish_id" type="java.sql.Types.BIGINT"/>
			
			<column name="streetName" type="java.sql.Types.VARCHAR(60)"/>
			
			<column name="streetNumber" type="java.sql.Types.BIGINT"/>
		</createTable>
	</changeSet>

	<changeSet id="9" author="jcaseiro">
		<comment>Foreign keys for address table</comment>
		<addForeignKeyConstraint baseColumnNames="parish_id" baseTableName="Address" constraintName="FK_Address_Parish" referencedColumnNames="id"
		    referencedTableName="Parish" referencesUniqueColumn="false"/>
	</changeSet>
	
	<changeSet id="10" author="jcaseiro">
		<comment>create unique constraint on table Address</comment>
	
		<addUniqueConstraint tableName="Address" columnNames="parish_id, streetName, streetNumber"/>
	</changeSet>
	
	<!-- /////////////////////////////////////////////////////////////// Celebrity ///////////////////////////////////////////////////////////////////// -->
	
	<changeSet id="11" author="jcaseiro">
		<comment>Table holding celebrity information</comment>

		<createTable tableName="Celebrity">

			<column name="id" type="java.sql.Types.BIGINT">
				<constraints primaryKey="true" />
			</column>
			
			<column name="entityVersion" type="java.sql.Types.BIGINT" />
			
			<column name="firstName" type="java.sql.Types.VARCHAR(35)" />
			
			<column name="lastName" type="java.sql.Types.VARCHAR(25)"/>
			
			<!-- <column name="roles" set of roles/>  -->
			
			<!-- <column name="country_id" type=""/>  -->
			
			<column name="address_id" type="java.sql.Types.BIGINT"/>
		</createTable>
	</changeSet>
	
	<changeSet id="12" author="jcaseiro">
		<comment>Foreign keys for celebrity table</comment>
			<addForeignKeyConstraint baseColumnNames="address_id" baseTableName="Celebrity" constraintName="FK_Celebrity_Address" referencedColumnNames="id"
		    	referencedTableName="Address" referencesUniqueColumn="false"/>
	</changeSet>
	
	<!-- /////////////////////////////////////////////////////////////// Movie ///////////////////////////////////////////////////////////////////// -->
	
	<changeSet id="13" author="jcaseiro">
		<comment>Table holding movie information</comment>

		<createTable tableName="Movie">

			<column name="id" type="java.sql.Types.BIGINT">
				<constraints primaryKey="true" />
			</column>
			
			<column name="entityVersion" type="java.sql.Types.BIGINT" />
			
			<column name="title" type="java.sql.Types.VARCHAR(35)" />
			
			<column name="lengthInMinutes" type="java.sql.Types.BIGINT"/>
			
			<column name="releaseDate" type="java.sql.Types.DATE"/>
			
			<column name="budgetInEuros" type="java.sql.Types.BIGINT"/>
			
			<column name="costInEuros" type="java.sql.Types.BIGINT"/>
			
			<column name="revenueInEuros" type="java.sql.Types.BIGINT"/>
			
			<!-- <column name="roles" set of roles/>  -->
		</createTable>
	</changeSet>
	
	<!-- /////////////////////////////////////////////////////////////// Role ///////////////////////////////////////////////////////////////////// -->
	
	<changeSet id="14" author="jcaseiro">
		<comment>Table holding role information</comment>
	
		<createTable tableName="Role">

			<column name="id" type="java.sql.Types.BIGINT">
				<constraints primaryKey="true" />
			</column>
			
			<column name="entityVersion" type="java.sql.Types.BIGINT" />
			
			<column name="celebrity_id" type="java.sql.Types.BIGINT" />
			
			<column name="movie_id" type="java.sql.Types.BIGINT"/>
			
			<!-- <column name="occupation" type=""/>  -->
		</createTable>
	</changeSet>
	
	<changeSet id="15" author="jcaseiro">
		<comment>Foreign keys for role table</comment>
			<addForeignKeyConstraint baseColumnNames="celebrity_id" baseTableName="Role" constraintName="FK_Role_Celebrity" referencedColumnNames="id"
		    	referencedTableName="Celebrity" referencesUniqueColumn="false"/>
			<addForeignKeyConstraint baseColumnNames="movie_id" baseTableName="Role" constraintName="FK_Role_Movie" referencedColumnNames="id"
		    	referencedTableName="Movie" referencesUniqueColumn="false"/>
	</changeSet>
	
	<changeSet id="16" author="jcaseiro">
		<comment>create unique constraint on table Role</comment>
	
		<addUniqueConstraint tableName="Role" columnNames="celebrity_id, movie_id"/>
	</changeSet>
	
	<changeSet id="17" author="jcaseiro">
		<comment>add column to celebrity table</comment>
	
		<addColumn tableName="Celebrity">
			<column name="country" type="java.sql.Types.VARCHAR(35)"/>
		</addColumn>
	</changeSet>
</databaseChangeLog>